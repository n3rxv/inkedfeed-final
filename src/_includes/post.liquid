---
layout: layout.liquid
---

<article class="content">
  <h1 class="post-title-lg">{{ title }}</h1>

  <div class="post-meta-row">
    <span>{{ date | date: "%B %d, %Y" }}</span>
    {% if author %}
    <span> â€¢ {{ author }}</span>
    {% endif %}
  </div>

  {% if heroImage %}
  <figure class="post-hero">
    <img src="{{ heroImage }}" alt="{{ imageAlt | default: title }}">
    {% if imageCaption %}
    <figcaption class="image-caption">{{ imageCaption }}</figcaption>
    {% endif %}
  </figure>
  {% endif %}

  {{ content }}
</article>
