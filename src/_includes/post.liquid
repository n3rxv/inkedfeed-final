
{% if featured_image and featured_image.src %}
<figure class="post-image">
  <img src="{{ featured_image.src }}" alt="{{ featured_image.alt | default: title }}">
  {% if featured_image.caption %}
  <figcaption>{{ featured_image.caption }}</figcaption>
  {% endif %}
</figure>
{% endif %}

---
layout: layout.liquid
---

<article class="content">
  <h1 class="post-title-lg">{{ title }}</h1>

  <div class="post-meta-row">
    <span>{{ date | date: "%B %d, %Y" }}</span>
    {% if author %}
    <span> â€¢ {{ author }}</span>
    {% endif %}
  </div>

  {% if heroImage %}
  <div class="post-hero">
    <img src="{{ heroImage }}" alt="">
  </div>
  {% endif %}

  {{ content }}
</article>
